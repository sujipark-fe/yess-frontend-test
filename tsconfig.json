{
  "compilerOptions": {
    "outDir": "./build",
    "rootDir": "./src",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "paths": {
      "src/*": ["src/*"]
    },
    "typeRoots": ["./src/types/**", "./node_modules/@types", "./node_modules/types"],
    "target": "ESNext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "lib": ["es2018", "dom"],
    "allowJs": true,
    "checkJs": false,
    "allowSyntheticDefaultImports": true
  },
  "include": ["src", "types"],
  "skipLibCheck": true
}
